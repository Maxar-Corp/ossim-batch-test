test1.name: wms-get-map-test1
test1.description: Test a wms get map call to omar server.
test1.enabled: 1

// Commands to generate expected results:

// Get the image via wget:
test1.expected_results_command0: wget "http://71.43.98.139/omar/ogc/wms?request=GetMap&layers=23&bbox=2.9558,36.6848,3.2678,36.8275&srs=EPSG:4326&width=1024&height=582&format=image/jpeg" -O $(OBT_EXP_DIR)/t1.jpg

// ossim-info -i (image) dump:
test1.expected_results_command1: ossim-info -i $(OBT_EXP_DIR)/t1.jpg > $(OBT_EXP_DIR)/info.txt

// Make a histogram:
test1.expected_results_command2: ossim-preproc --ch $(OBT_EXP_DIR)/t1.jpg

// The actual commands to test:

// Get the image via wget:
test1.test_command0: wget "http://71.43.98.139/omar/ogc/wms?request=GetMap&layers=23&bbox=2.9558,36.6848,3.2678,36.8275&srs=EPSG:4326&width=1024&height=582&format=image/jpeg" -O $(OBT_OUT_DIR)/t1.jpg

// ossim-info -i (image) dump:
test1.test_command1: ossim-info -i $(OBT_OUT_DIR)/t1.jpg > $(OBT_OUT_DIR)/info.txt

// Make a histogram:
test1.test_command2: ossim-preproc --ch $(OBT_OUT_DIR)/t1.jpg

// Post process commands for diffs and stuff:

// Test the info dump:
test1.postprocess_command0: $(DIFF_CMD) $(OBT_EXP_DIR)/info.txt $(OBT_OUT_DIR)/info.txt

// Test the histogram:
test1.postprocess_command1: $(DIFF_CMD) $(OBT_EXP_DIR)/t1.his $(OBT_OUT_DIR)/t1.his

